@using FinalProject.Application.Contracts
@model List<ProjectGetDto>

<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-3 col-sm-6 col-12 mb-4 proj_form_container">
            <div class="card">
                <div class="project-card-body">
                    <h5 class="card-title">@project.Name</h5>
                    <p class="card-text">@project.PreviewDescription</p>
                    <p class="card-text"><small class="text-muted">@project.Category</small></p>
                    <img src="~/uploads/@project.filePath"; style="width: 300px; height: auto; align-items: center; border-radius: 20px;  padding: 10px;" class="">
                </div>
            </div>
        </div>
    }
</div>